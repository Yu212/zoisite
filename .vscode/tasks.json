{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Fuzzer",
            "type": "cargo",
            "command": "fuzz",
            "args": [
                "run",
                "main",
                "--",
                "-max_total_time=30"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "Build Compiler",
            "type": "cargo",
            "command": "build",
            "args": [
                "--package=zoisite",
                "--bin=zoic"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build LSP Server",
            "type": "npm",
            "script": "build-server",
            "problemMatcher": "$tsc",
            "options": {
                "cwd": "${workspaceFolder}/vscode"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build and Copy Compiler",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/target/debug/zoic",
                "${workspaceFolder}/files/zoic"
            ],
            "dependsOn": ["Build Compiler"],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Prepare Dev",
            "dependsOn": [
                "Build and Copy Compiler",
                "Build LSP Server",
                "npm: watch",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
            },
            "options": {
                "cwd": "${workspaceFolder}/vscode"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Compile LSP Extension",
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc",
            "options": {
                "cwd": "${workspaceFolder}/vscode"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
